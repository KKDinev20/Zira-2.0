@model Zira.Presentation.Models.SavingsGoalViewModel

@{
    ViewData["Title"] = "Create Savings Goal";
    Layout = "Shared/_SavingsGoalLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <i class="bx bx-wallet"></i> Create Savings Goal
    </h4>

    <div class="card shadow-sm">
        <h5 class="card-header">New Savings Goal</h5>
        <div class="card-body">
            <form method="post" asp-action="CreateSavingsGoal">
                <div class="mb-3">
                    <label for="Name" class="form-label">Goal Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required/>
                </div>
                <div class="mb-3">
                    <label for="TargetAmount" class="form-label">Target Amount</label>
                    <input type="number" class="form-control" id="TargetAmount" name="TargetAmount" required min="1"/>
                </div>
                <div class="mb-3">
                    <label for="TargetDate" class="form-label">Target Date</label>
                    <input type="date" class="form-control" id="TargetDate" name="TargetDate"/>
                </div>
                <button type="submit" class="btn btn-success">Create Goal</button>
            </form>
        </div>
    </div>
</div>