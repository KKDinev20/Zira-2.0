            <li>
                <form method="post" asp-controller="Authentication" asp-action="Logout">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item">
                        <i class="bx bx-power-off me-2"></i>
                        <span class="align-middle">Log Out</span>
                    </button>
                </form>
            </li>
