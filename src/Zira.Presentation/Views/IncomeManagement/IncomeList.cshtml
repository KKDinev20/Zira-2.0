@model IncomesListViewModel

@{
    Layout = "Shared/_IncomeLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Incomes</h4>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <caption class="ms-4">
                    List of Income Entries
                </caption>
                <thead>
                <tr>
                    <th>Source</th>
                    <th>Amount</th>
                    <th>Date Received</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var income in Model.Incomes)
                {
                    <tr>
                        <td>
                            <i class="bx bx-briefcase fa-lg text-primary me-3"></i> <strong>@income.Source</strong>
                        </td>
                        <td>@income.Amount.ToString("C")</td>
                        <td>@income.DateReceived.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("EditIncome", "IncomeManagement", new { id = income.IncomeId })">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("DeleteIncome", "IncomeManagement", new { id = income.IncomeId })">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
            <a href="@Url.Action("IncomeList", "IncomeManagement", new { page = Model.CurrentPage - 1 })" class="btn btn-link">Previous</a>
            }

            <span>Page @Model.CurrentPage of @Model.TotalPages</span>

            @if (Model.CurrentPage < Model.TotalPages)
            {
            <a href="@Url.Action("IncomeList", "IncomeManagement", new { page = Model.CurrentPage + 1 })" class="btn btn-link">Next</a>
            }
        </div>
    </div>
</div>