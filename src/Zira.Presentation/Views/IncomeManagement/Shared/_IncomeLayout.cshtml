@{
    var topbarViewModel = new TopBarViewModel
    {
        UserName = ViewBag.UserName,
        UserEmail = ViewBag.UserEmail,
        UserAvatar = ViewBag.UserAvatar
    };
}

@await Html.PartialAsync("~/Views/Shared/_Head.cshtml")

<body>
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->
        @await Html.PartialAsync("~/Views/Shared/_Sidebar.cshtml")
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->
            @await Html.PartialAsync("~/Views/Shared/_TopBar.cshtml", topbarViewModel, ViewData)
            <!-- / Navbar -->

            <!-- Content -->
            @RenderBody()
            <!-- / Content -->

            <!-- Footer -->
            @await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
        </div>
        <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
</div>
<!-- / Layout wrapper -->
</body>

@await Html.PartialAsync("~/Views/Shared/_Scripts.cshtml")