@{
    Layout = "Shared/_IncomeLayout";
}
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <h5 class="mb-0 text-center">Add Income</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddIncome" asp-controller="IncomeManagement" method="post">
                        <!-- Amount Input -->
                        <div class="mb-3">
                            <label class="form-label" for="income-amount">Amount</label>
                            <div class="input-group input-group-merge">
                                <span id="income-amount-icon" class="input-group-text">
                                    <i class="bx bx-money"></i>
                                </span>
                                <input
                                    type="number"
                                    class="form-control"
                                    id="income-amount"
                                    name="Amount"
                                    placeholder="Enter income amount"
                                    required
                                    step="0.01"
                                    aria-label="Amount"
                                    aria-describedby="income-amount-icon"/>
                            </div>
                        </div>

                        <!-- Source Input -->
                        <div class="mb-3">
                            <label class="form-label" for="income-source">Source</label>
                            <div class="input-group input-group-merge">
                                <span id="income-source-icon" class="input-group-text">
                                    <i class="bx bx-briefcase"></i>
                                </span>
                                <select
                                    class="form-control"
                                    id="income-source"
                                    name="Source"
                                    required
                                    aria-label="Income Source"
                                    aria-describedby="income-source-icon">
                                    <option value="" disabled selected>Select a source</option>
                                    <option value="0">Salary</option>
                                    <option value="1">Freelance</option>
                                    <option value="2">Investments</option>
                                    <option value="3">Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- Date Received Input -->
                        <div class="mb-3">
                            <label class="form-label" for="income-date">Date Received</label>
                            <div class="input-group input-group-merge">
                                <span id="income-date-icon" class="input-group-text">
                                    <i class="bx bx-calendar"></i>
                                </span>
                                <input
                                    type="date"
                                    class="form-control"
                                    id="income-date"
                                    name="DateReceived"
                                    required
                                    aria-label="Date Received"
                                    aria-describedby="income-date-icon"/>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Add Income</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>