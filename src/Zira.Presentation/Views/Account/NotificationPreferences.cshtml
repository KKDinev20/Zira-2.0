@model ReminderSettings

@{
    Layout = "Shared/_ProfileLayout";
    ViewData["Title"] = @AccountText.Notifications;
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            @AccountText.Notifications
        </h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">@AccountText.NotificationPreferences</h5>
                    <div class="card-body">
                        <span
                        >
                            @AccountText.NotifConfigPrompt
                        </span
                        >
                        <div class="error"></div>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        <form asp-action="UpdateNotificationPreferences" method="post">
                            <div class="table-responsive">
                                <table class="table table-striped table-borderless border-bottom">
                                    <thead>
                                    <tr>
                                        <td>@AccountText.EnableNotifications</td>
                                        <th class="text-nowrap text-center">@AccountText.Enable</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td class="text-nowrap">@AccountText.BillReminders</td>
                                        <td>
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" asp-for="EnableBillReminders"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-nowrap">@AccountText.BudgetAlerts</td>
                                        <td>
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" asp-for="EnableBudgetAlerts"/>
                                            </div>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary me-2">@TransactionText.SaveChanges</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>