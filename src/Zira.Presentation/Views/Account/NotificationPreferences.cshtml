@model ReminderSettings

@{
Layout = "Shared/_ProfileLayout";
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            Notifications
        </h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">Notification Preferences</h5>
                    <div class="card-body">
                      <span
                      >Please set your notification preferences
                       </span
                      >
                        <div class="error"></div>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                        }
                        <form asp-action="UpdateNotificationPreferences" method="post">
                            <div class="table-responsive">
                                <table class="table table-striped table-borderless border-bottom">
                                    <thead>
                                    <tr>
                                        <td>Enable notifications</td>
                                        <th class="text-nowrap text-center">Enable</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td class="text-nowrap">Bill Reminders</td>
                                        <td>
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" asp-for="EnableBillReminders" />
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-nowrap">Budget Alerts</td>
                                        <td>
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" asp-for="EnableBudgetAlerts" />
                                            </div>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary me-2">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>