<div class="card shadow-lg border-0 mb-4">
        <div class="card-header bg-white py-3 px-4">
            <h5>@TransactionText.QuickAddExpense</h5>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm("QuickAddTransaction", "Transactions", FormMethod.Post))
            {
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="Category" class="form-label fw-medium text-gray-700 mb-2">
                            @TransactionText.Category
                        </label>
                        <select id="Category" name="Category" class="form-select border-2 rounded-lg px-3 py-2 focus-visible:ring-2 focus-visible:ring-primary transition-colors" required>
                            <option value="" disabled selected>@TransactionText.SelectACategory</option>
                            @foreach (var category in Enum.GetValues(typeof(Categories)).Cast<Categories>())
                            {
                                <option value="@category">@category.GetLocalizedExpenseCategory()</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="Amount" class="form-label fw-medium text-gray-700 mb-2">
                            @TransactionText.Amount
                        </label>
                        <input type="number" id="Amount" name="Amount" class="form-control border-2 rounded-lg px-3 py-2 focus-visible:ring-2 focus-visible:ring-primary transition-colors"
                               placeholder="0.00" step="0.01" required/>
                    </div>

                    <div class="col-md-4">
                        <label for="DateSpent" class="form-label fw-medium text-gray-700 mb-2">
                            @TransactionText.TransactionDate
                        </label>
                        <input for="DateSpent"
                               type="date"
                               class="form-control datepicker"
                               id="transaction-date"
                               required
                               placeholder="Select date"/>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary w-100 py-2 px-4 rounded-md text-uppercase fw-semibold hover:opacity-90 transition-opacity">
                        @TransactionText.QuickAdd
                    </button>
                </div>
            }
        </div>
    </div>