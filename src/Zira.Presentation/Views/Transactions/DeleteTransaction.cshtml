@using Zira.Presentation.Extensions
@model Zira.Data.Models.Transaction
@{
ViewData["Title"] = "Delete Transaction";
Layout = "Shared/_TransactionsLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Delete Transaction</h5>
        <div class="card-body">
            <h6 class="card-title">Are you sure you want to delete this transaction?</h6>

            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Transaction Category</th>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        @*<td>
                            <i class="bx bx-wallet-alt fa-lg text-primary me-3"></i> <strong>@Model.Category.GetLocalizedExpenseCategory()</strong>
                        </td>*@
                        <td>@Model.Amount.ToString("C")</td>
                        <td>@Model.Date.ToString("dd-MM-yyyy")</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <form method="post">
                <input type="hidden" name="id" value="@Model.Id"/>

                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("TransactionList", "Transactions")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
