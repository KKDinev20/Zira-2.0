@model BudgetListViewModel
@{
    ViewData["Title"] = "View Budgets";
    Layout = "Shared/_BudgetLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">@ExpensesText.Expenses</h4>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <h5 class="card-header">@ExpensesText.ExpensesList</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                <tr>
                    <th>@ExpensesText.ExpenseCategory</th>
                    <th>@ExpensesText.Amount</th>
                    <th>@ExpensesText.DateSpent</th>
                    <th>@ExpensesText.Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var expense in Model.Budgets)
                {
                    <tr>
                        <td>
                            <i class="bx bx-wallet-alt me-3"></i> <strong>@expense.Category</strong>
                        </td>
                        <td>@expense.Amount.ToString("C")</td>
                        <td>@expense.Month.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("EditBudget", "Budget", new { id = expense.BudgetId })">
                                    <i class="bx bx-edit-alt me-1"></i> @ExpensesText.Edit
                                </a>
                                <a class="dropdown-item" href="@Url.Action("DeleteBudget", "Budget", new { id = expense.BudgetId })">
                                    <i class="bx bx-trash me-1"></i> @ExpensesText.Delete
                                </a>
                            </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            @if (Model.CurrentPage > 1)
            {
                <a href="@Url.Action("ExpensesList", "Expenses", new { page = Model.CurrentPage - 1 })" class="btn btn-link">@ExpensesText.Previous</a>
            }

            <span class="mx-3">Page @Model.CurrentPage of @Model.TotalPages</span>

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="@Url.Action("ExpensesList", "Expenses", new { page = Model.CurrentPage + 1 })" class="btn btn-link">@ExpensesText.Next</a>
            }
        </div>
    </div>
</div>