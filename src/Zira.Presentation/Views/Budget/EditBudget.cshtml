@model Zira.Data.Models.Budget
@{
    ViewData["Title"] = "Edit Budget";
    Layout = "Shared/_BudgetLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Edit Budget</h5>
        <div class="card-body">
            <form asp-action="EditBudget" asp-controller="Budget" method="post">
                <input type="hidden" asp-for="BudgetId"/>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Category</label>
                    <select asp-for="Category" class="form-control" required>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category" selected="@(category.Equals(Model.Category) ? "selected" : null)">
                                @category
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label">Amount</label>
                    <input type="number" step="0.01" asp-for="Amount" class="form-control" required/>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Month" class="form-label">Month</label>
                    <input type="month" asp-for="Month" class="form-control" required/>
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="@Url.Action("ViewBudgets", "Budget")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>