@model IncomesListViewModel

@{
    ViewData["Title"] = @IncomeText.ListOfIncomes;
    Layout = "Shared/_IncomeLayout";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">@IncomeText.Incomes</h4>

    @if (TempData["IncomeSuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["IncomeSuccessMessage"]</div>
    }
    @if (TempData["IncomeErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["IncomeErrorMessage"]</div>
    }

    <div class="card">
        <h5 class="card-header">@IncomeText.ListOfIncomes</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                <tr>
                    <th>@IncomeText.Source</th>
                    <th>@IncomeText.Amount</th>
                    <th>@IncomeText.DateReceived</th>
                    <th>@IncomeText.Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var income in Model.Incomes)
                {
                    <tr>
                        <td>
                            <i class="bx bx-wallet-alt me-3"></i> <strong>@income.Source</strong>
                        </td>
                        <td>@income.Amount.ToString("C")</td>
                        <td>@income.DateReceived.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("EditIncome", "Incomes", new { id = income.IncomeId })">
                                        <i class="bx bx-edit-alt me-1"></i> @IncomeText.Edit
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("DeleteIncome", "Incomes", new { id = income.IncomeId })">
                                        <i class="bx bx-trash me-1"></i> @IncomeText.Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item first">
                        <a class="page-link" href="@Url.Action("IncomeList", "Incomes", new { page = 1 })">
                            <i class="tf-icon bx bx-chevrons-left"></i>
                        </a>
                    </li>
                    <li class="page-item prev">
                        <a class="page-link" href="@Url.Action("IncomeList", "Incomes", new { page = Model.CurrentPage - 1 })">
                            <i class="tf-icon bx bx-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("IncomeList", "Incomes", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item next">
                        <a class="page-link" href="@Url.Action("IncomeList", "Incomes", new { page = Model.CurrentPage + 1 })">
                            <i class="tf-icon bx bx-chevron-right"></i>
                        </a>
                    </li>
                    <li class="page-item last">
                        <a class="page-link" href="@Url.Action("IncomeList", "Incomes", new { page = Model.TotalPages })">
                            <i class="tf-icon bx bx-chevrons-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>