@model IncomesListViewModel

@{
    ViewData["Title"] = "Income List";
    Layout = "Shared/_IncomeLayout";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">@IncomeText.Incomes</h4>

    @if (TempData["IncomeSuccessMessage"] != null)
    {
    <div class="alert alert-success">@TempData["IncomeSuccessMessage"]</div>
    }
    @if (TempData["IncomeErrorMessage"] != null)
    {
    <div class="alert alert-danger">@TempData["IncomeErrorMessage"]</div>
    }

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <caption class="ms-4">
                    @IncomeText.ListOfIncomes
                </caption>
                <thead>
                <tr>
                    <th>@IncomeText.Source</th>
                    <th>@IncomeText.Amount</th>
                    <th>@IncomeText.DateReceived</th>
                    <th>@IncomeText.Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var income in Model.Incomes)
                {
                    <tr>
                        <td>
                            <i class="bx bx-briefcase fa-lg text-primary me-3"></i> <strong>@income.Source</strong>
                        </td>
                        <td>@income.Amount.ToString("C")</td>
                        <td>@income.DateReceived.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("EditIncome", "Incomes", new { id = income.IncomeId })">
                                        <i class="bx bx-edit-alt me-1"></i> @IncomeText.Edit
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("DeleteIncome", "Incomes", new { id = income.IncomeId })">
                                        <i class="bx bx-trash me-1"></i> @IncomeText.Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="@Url.Action("IncomeList", "Incomes", new { page = Model.CurrentPage - 1 })" class="btn btn-link">@IncomeText.Previous</a>
            }

            <span>Page @Model.CurrentPage of @Model.TotalPages</span>

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="@Url.Action("IncomeList", "Incomes", new { page = Model.CurrentPage + 1 })" class="btn btn-link">@IncomeText.Next</a>
            }
        </div>
    </div>
</div>