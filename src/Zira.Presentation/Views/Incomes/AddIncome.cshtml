@{
Layout = "Shared/_IncomeLayout";
}

<div class="content-wrapper">
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <h5 class="mb-0 text-center">@IncomeText.AddIncome</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddIncome" asp-controller="Incomes" method="post">
                        <div class="mb-3">
                            <label class="form-label" for="income-amount">@IncomeText.Amount</label>
                            <div class="input-group input-group-merge">
                                <span id="income-amount-icon" class="input-group-text">
                                    <i class="bx bx-money"></i>
                                </span>
                                <input
                                    type="number"
                                    class="form-control"
                                    id="income-amount"
                                    name="Amount"
                                    placeholder="@IncomeText.Amount"
                                    required
                                    step="1.00"
                                    aria-label="@IncomeText.Amount"
                                    aria-describedby="income-amount-icon"/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="income-source">@IncomeText.Source</label>
                            <div class="input-group input-group-merge">
                                <span id="income-source-icon" class="input-group-text">
                                    <i class="bx bx-briefcase"></i>
                                </span>
                                <select
                                    class="form-control"
                                    id="income-source"
                                    name="Source"
                                    required
                                    aria-label="@IncomeText.Source"
                                    aria-describedby="income-source-icon">
                                    <option value="" disabled selected>@IncomeText.Source</option>
                                    <option value="0">Salary</option>
                                    <option value="1">Freelance</option>
                                    <option value="2">Investments</option>
                                    <option value="3">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="income-date">@IncomeText.DateReceived</label>
                            <div class="input-group input-group-merge">
                                <span id="income-date-icon" class="input-group-text">
                                    <i class="bx bx-calendar"></i>
                                </span>
                                <input
                                    type="date"
                                    class="form-control"
                                    id="income-date"
                                    name="DateReceived"
                                    required
                                    aria-label="@IncomeText.DateReceived"
                                    aria-describedby="income-date-icon"/>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">@IncomeText.AddIncome</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
