@model Zira.Data.Income
@{
    ViewData["Title"] = @IncomeText.EditIncome;
    Layout = "Shared/_IncomeLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">@IncomeText.EditIncome</h5>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="IncomeId"/>

                <div class="mb-3">
                    <label asp-for="Source" class="form-label">@IncomeText.Source</label>
                    <select asp-for="Source" class="form-control">
                        @foreach (var source in ViewBag.Sources)
                        {
                            <!option value="@source" @(source == Model.Source ? "selected" : "")>
                                @source
                            </!option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label">@IncomeText.Amount</label>
                    <input type="number" step="0.01" asp-for="Amount" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="DateReceived" class="form-label">@IncomeText.DateReceived</label>
                    <input type="date" asp-for="DateReceived" class="form-control"/>
                </div>

                <button type="submit" class="btn btn-primary">@IncomeText.SaveChanges</button>
            </form>
        </div>
    </div>
</div>