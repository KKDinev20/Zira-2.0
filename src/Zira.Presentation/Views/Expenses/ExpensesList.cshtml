@model ExpensesListViewModel
@*
@inject Microsoft.Extensions.Localization.IStringLocalizer<ExpenseCategories> Localizer
*@

@{
    ViewData["Title"] = @ExpensesText.Expenses;
    Layout = "Shared/_ExpensesLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">@ExpensesText.Expenses</h4>
    <div class="card mb-4">
        <div class="card-header">
            <h5>@ExpensesText.QuickAdd</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("QuickAddExpenses", "Expenses", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-4">
                        <label for="Category" class="form-label">@ExpensesText.ExpenseCategory</label>
                        @*<select id="Category" name="Category" class="form-select">
                            @foreach (Zira.Data.Enums.Categories category in Enum.GetValues(typeof(Zira.Data.Enums.Categories)))
                            {
                            <option value="@category">@Localizer[category.ToString()]</option>
                            }
                        </select>*@
                    </div>
                    <div class="col-md-4">
                        <label for="Amount" class="form-label">@ExpensesText.Amount</label>
                        <input type="number" id="Amount" name="Amount" class="form-control" placeholder="0.00" step="0.01" required/>
                    </div>
                    <div class="col-md-4">
                        <label for="DateSpent" class="form-label">@ExpensesText.DateSpent</label>
                        <input type="date" id="DateSpent" name="DateSpent" class="form-control" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")"/>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">@ExpensesText.QuickAdd</button>
                </div>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <h5 class="card-header">@ExpensesText.ExpensesList</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                <tr>
                    <th>@ExpensesText.ExpenseCategory</th>
                    <th>@ExpensesText.Amount</th>
                    <th>@ExpensesText.DateSpent</th>
                    <th>@ExpensesText.Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var expense in Model.Expenses)
                {
                    <tr>
                        <td>
                            <i class="bx bx-wallet-alt me-3"></i> <strong>@expense.Category</strong>
                        </td>
                        <td>@expense.Amount.ToString("C")</td>
                        <td>@expense.DateSpent.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("EditExpenses", "Expenses", new { id = expense.ExpenseId })">
                                        <i class="bx bx-edit-alt me-1"></i> @ExpensesText.Edit
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("DeleteExpense", "Expenses", new { id = expense.ExpenseId })">
                                        <i class="bx bx-trash me-1"></i> @ExpensesText.Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item first">
                        <a class="page-link" href="@Url.Action("ExpensesList", "Expenses", new { page = 1 })">
                            <i class="tf-icon bx bx-chevrons-left"></i>
                        </a>
                    </li>
                    <li class="page-item prev">
                        <a class="page-link" href="@Url.Action("ExpensesList", "Expenses", new { page = Model.CurrentPage - 1 })">
                            <i class="tf-icon bx bx-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("ExpensesList", "Expenses", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item next">
                        <a class="page-link" href="@Url.Action("ExpensesList", "Expenses", new { page = Model.CurrentPage + 1 })">
                            <i class="tf-icon bx bx-chevron-right"></i>
                        </a>
                    </li>
                    <li class="page-item last">
                        <a class="page-link" href="@Url.Action("ExpensesList", "Expenses", new { page = Model.TotalPages })">
                            <i class="tf-icon bx bx-chevrons-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>