@{
    ViewData["Title"] = "Add Expenses";
    Layout = "Shared/_ExpensesLayout";
}
<div class="content-wrapper">
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <h5 class="mb-0 text-center">@ExpensesText.AddExpense</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddExpenses" asp-controller="Expenses" method="post">
                        <div class="mb-3">
                            <label class="form-label" for="expense-amount">@ExpensesText.Amount</label>
                            <div class="input-group input-group-merge">
                                <span id="expense-amount-icon" class="input-group-text">
                                    <i class="bx bx-money"></i>
                                </span>
                                <input
                                    type="number"
                                    class="form-control"
                                    id="expense-amount"
                                    name="Amount"
                                    placeholder="@ExpensesText.EnterExpenseAmount"
                                    required
                                    step="0.01"
                                    aria-label="@ExpensesText.Amount"
                                    aria-describedby="expense-amount-icon"/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="expense-category">@ExpensesText.ExpenseCategory</label>
                            <div class="input-group input-group-merge">
                                <span id="expense-category-icon" class="input-group-text">
                                    <i class="bx bx-briefcase"></i>
                                </span>
                                <select
                                    class="form-control"
                                    id="expense-category"
                                    name="Category"
                                    required
                                    aria-label="@ExpensesText.ExpenseCategory"
                                    aria-describedby="expense-category-icon">
                                    <option value="" disabled selected>@ExpensesText.SelectACategory</option>
                                    @foreach (var category in Enum.GetValues(typeof(Zira.Data.Enums.Categories)))
                                    {
                                        <option value="@category">@category</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="expense-date">@ExpensesText.DateSpent</label>
                            <div class="input-group input-group-merge">
                                <span id="expense-date-icon" class="input-group-text">
                                    <i class="bx bx-calendar"></i>
                                </span>
                                <input
                                    type="date"
                                    class="form-control"
                                    id="expense-date"
                                    name="DateSpent"
                                    required
                                    aria-label="@ExpensesText.DateSpent"
                                    aria-describedby="expense-date-icon"/>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">@ExpensesText.AddExpense</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>