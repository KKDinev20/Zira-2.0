@model Zira.Presentation.Models.ExpenseAnalyticsViewModel

@{
    Layout = "Shared/_AnalyticsLayout";
    ViewData["Title"] = "Financial Overview";
}

<div class="container">
    <h2>Financial Overview</h2>

    <h3>Top Expenses by Category</h3>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var expense in Model.TopExpenses)
        {
            <tr>
                <td>@expense.Category</td>
                <td>@expense.TotalAmount.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>

    <h3>Cost Saving Tips</h3>
    <ul>
        @foreach (var tip in Model.CostSavingTips)
        {
            <li>@tip</li>
        }
    </ul>
</div>