<section id="features-cards" class="features-cards section">

    <div class="container">

        <div class="row gy-4">

            <div class="col-xl-3 col-md-6" data-aos="zoom-in" data-aos-delay="100">
                <div class="feature-box orange">
                    <i class="bi bi-wallet2"></i>
                    <h4>@LandingText.FeatureBox1</h4>
                    <p>@LandingText.FeatureBoxDesc1</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6" data-aos="zoom-in" data-aos-delay="200">
                <div class="feature-box blue">
                    <i class="bi bi-bar-chart-line"></i>
                    <h4>@LandingText.FeatureBox2</h4>
                    <p>@LandingText.FeatureBoxDesc2</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6" data-aos="zoom-in" data-aos-delay="300">
                <div class="feature-box green">
                    <i class="bi bi-graph-up-arrow"></i>
                    <h4>@LandingText.FeatureBox3</h4>
                    <p>@LandingText.FeatureBoxDesc3</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6" data-aos="zoom-in" data-aos-delay="400">
                <div class="feature-box red">
                    <i class="bi bi-shield-lock"></i>
                    <h4>@LandingText.FeatureBox4</h4>
                    <p>@LandingText.FeatureBoxDesc4</p>
                </div>
            </div>

        </div>

    </div>

</section>